{
  "manifest_version": 3,
  "name": "Mirror2Markdown",
  "version": "1.0",
  "description": "Convert Mirror.xyz articles to Markdown format",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.mirror.xyz/*"
  ]
} 